<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/gray_light"
    tools:context=".bloconotas.BlocoNotasActivity">

    <!-- Barra de busca -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="12dp">

        <SearchView
            android:id="@+id/searchNotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Pesquisar por título"
            android:iconifiedByDefault="false" />
    </androidx.cardview.widget.CardView>

    <!-- Entrada de nota (título + conteúdo juntos) -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="12dp"
        android:padding="5dp"
        android:layout_margin="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="0dp">


            <!-- Campo de título -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="0dp"
                android:hint="Título da nota"


                app:boxBackgroundMode="none">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTitulo"
                    android:layout_width="match_parent"
                    android:padding="0dp"


                    android:layout_height="16dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo de conteúdo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:boxBackgroundMode="none"
               android:layout_marginTop="-15dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtConteudo"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginTop="-20dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:minLines="3" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <!-- Botão salvar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalvarNota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salvar Nota"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="2dp"
            app:cornerRadius="12dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Voltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sair do App"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="2dp"
            app:cornerRadius="12dp" />
    </LinearLayout>


    <!-- Lista de notas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNotas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="12dp" />

</LinearLayout>
